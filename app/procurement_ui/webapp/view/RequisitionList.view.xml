<mvc:View
    controllerName="com.procurement.ui.controller.RequisitionList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="My Requisitions" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table
                id="requisitionTable"
                inset="false"
                items="{
                    path: '/RequisitionHeader',
                    sorter: [
                        { path: 'status', descending: false },
                        { path: 'createdAt', descending: true }
                    ],
                    parameters: {
                        $count: true,
                         $expand: 'items,supplier' 
                    }
                }"
                mode="SingleSelectMaster" 
                selectionChange=".onPressRequisition"
                updateFinished=".onUpdateFinished"
                class="sapUiResponsiveMargin"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Requisitions" level="H2"/>
                        <ToolbarSpacer/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="14rem"><Text text="Requisition ID"/></Column>
                    <Column width="8rem" minScreenWidth="Tablet" demandPopin="true"><Text text="Status"/></Column>
                    <Column width="10rem" minScreenWidth="Desktop" demandPopin="true"><Text text="Total Value"/></Column>
                    <Column width="10rem" minScreenWidth="Tablet" demandPopin="true"><Text text="Vendor"/></Column>
                    <Column width="12rem" minScreenWidth="Tablet" demandPopin="true"><Text text="Created At"/></Column>
                    <!-- Actions column removed as we now use row selection -->
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <ObjectIdentifier title="{requisitionHeaderID}"/>
                            <ObjectStatus 
                                text="{status}" 
                                state="{path: 'status', formatter: '.formatter.formatStatusState'}" 
                                icon="{path: 'status', formatter: '.formatter.formatStatusIcon'}"
                            />
                            <ObjectNumber number="{
                                parts: [{path: 'totalValue'}, {path: 'view>/currencyCode'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: { showMeasure: false }
                            }" unit="USD" />
                            <Text text="{supplier/name}"/>
                            <Text text="{createdAt}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

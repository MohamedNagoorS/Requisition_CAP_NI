<mvc:View
    controllerName="com.procurement.ui.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="Procurement Home" class="sapUiContentPadding">
        <content>
            <VBox class="sapUiSmallMargin">
                <Title text="Choose your dashboard" level="H2" class="sapUiSmallMarginBottom"/>
                <HBox alignItems="Center" justifyContent="Center" wrap="Wrap">
                    
                    <!-- 1. Manage Requisitions (Employee) -->
                    <f:Card class="sapUiMediumMargin" width="300px" height="auto" press=".onPressEmployeeServices" semanticRole="ListItem">
                        <f:header>
                            <card:Header title="Manage Requisitions" subtitle="Procurement &amp; History" iconSrc="sap-icon://cart"/>
                        </f:header>
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <Text text="Create new requests or view your requisition history."/>
                                <Button text="Go to Requisitions" type="Emphasized" press=".onPressEmployeeServices" class="sapUiSmallMarginTop" width="100%"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                    <!-- 2. Administration (Manager/Admin) -->
                    <f:Card class="sapUiMediumMargin" width="300px" height="auto" press=".onPressAdminServices" semanticRole="ListItem">
                        <f:header>
                            <card:Header title="Management Console" subtitle="Approvals &amp; Admin" iconSrc="sap-icon://manager"/>
                        </f:header>
                        <f:content>
                            <VBox class="sapUiSmallMargin">
                                <Text text="Manager approvals and system administration."/>
                                <Button text="Go to Management" type="Default" press=".onPressAdminServices" class="sapUiSmallMarginTop" width="100%"/>
                            </VBox>
                        </f:content>
                    </f:Card>

                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>

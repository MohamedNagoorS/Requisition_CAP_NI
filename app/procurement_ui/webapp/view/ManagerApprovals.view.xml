<mvc:View
    controllerName="com.procurement.ui.controller.ManagerApprovals"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="Manager Approvals" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table
                id="approvalTable"
                inset="false"
                items="{
                    path: '/RequisitionHeader',
                    filters: [
                        {path: 'status', operator: 'EQ', value1: 'Pending'}
                    ],
                    sorter: {
                        path: 'createdAt',
                        descending: true
                    },
                    parameters: {
                        $count: true
                    }
                }"
                class="sapUiResponsiveMargin"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Pending Requests" level="H2"/>
                        <ToolbarSpacer/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Requestor" /></Column>
                    <Column><Text text="Total Value" /></Column>
                    <Column hAlign="End"><Text text="Actions" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{requestor} (ID: {requisitionHeaderID})" />
                            <ObjectNumber number="{
                                parts: [{path: 'totalValue'}, {path: 'view>/currencyCode'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: { showMeasure: false }
                            }" unit="USD" />
                            
                            <!-- Inline Actions -->
                            <HBox justifyContent="End">
                                <Button icon="sap-icon://accept" type="Accept" press=".onApprove" />
                                <Button icon="sap-icon://decline" type="Reject" press=".onReject" class="sapUiTinyMarginBegin"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

<mvc:View
    controllerName="com.procurement.ui.controller.PRDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="Internal Document: Purchase Requisition" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox class="sapUiMediumMargin">
                 <Title text="Requisition #{requisitionHeaderID}" level="H2"/>
                 <ObjectStatus 
                    text="Status: {status}" 
                    state="{path: 'status', formatter: '.formatter.formatStatusState'}" 
                    icon="{path: 'status', formatter: '.formatter.formatStatusIcon'}"
                    class="sapUiSmallMarginBottom"
                 />
                 
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Header Details" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <core:Title text="General Info" />
                        <Label text="Requestor"/>
                        <Text text="{requestor}"/>
                        <Label text="Created At"/>
                        <Text text="{createdAt}"/>

                        <core:Title text="Financials" />
                        <Label text="Supplier"/>
                        <ComboBox items="{/Suppliers}" selectedKey="{supplier_ID}" placeholder="Select Supplier">
                            <core:Item key="{ID}" text="{name} ({city})"/>
                        </ComboBox>
                        
                        <Label text="Purchase Group"/>
                        <ComboBox items="{/PurchaseGroups}" selectedKey="{purchaseGroup_ID}" placeholder="Select Group">
                            <core:Item key="{ID}" text="{description} ({ID})"/>
                        </ComboBox>

                        <Label text="Company Code"/>
                        <Input value="{companyCode}" editable="false" />

                        <Label text="Total Value"/>
                        <ObjectNumber number="{
                            parts: [{path: 'totalValue'}, {path: 'view>/currencyCode'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: { showMeasure: false }
                        }" unit="{view>/currencyCode}" state="Success" />
                    </f:content>
                </f:SimpleForm>
            </VBox>

            <Title text="Line Items" class="sapUiSmallMarginTop" />
            <Table 
                id="itemsTable" 
                items="{
                    path: 'items',
                    parameters : {
                        $expand : 'material'
                    }
                }"
                width="auto"
                class="sapUiResponsiveMargin">
                <columns>
                    <Column><Text text="Material" /></Column>
                    <Column><Text text="Quantity" /></Column>
                    <Column><Text text="Price" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <!-- Displaying data from Association or Fallback -->
                            <Text text="{= ${material/description} || ${materialDescription} }" /> 
                            <Text text="{quantity}" />
                            <Text text="{price}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <!-- Actions -->
                <Button text="Send for Approval" type="Emphasized" press=".onSendForApproval" visible="{= ${status} === 'Created' }"/>
                <Button text="Generate PO" type="Accept" press=".onGeneratePO" enabled="{view>/isGPOEnabled}" visible="{= ${status} === 'Approved' }"/>
                <Button text="Goods Issue" type="Accept" press=".onGoodsIssue" enabled="{view>/isGIEnabled}" visible="{= ${status} === 'Approved' }"/>
                <Button text="Reject" type="Reject" press=".onReject" visible="{= ${status} === 'Pending' &amp;&amp; ${view>/isManager} }"/> 
                <!-- Note: 'isManager' is hypothetical here, usually handled by view/controller logic. Keeping it simple. -->
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

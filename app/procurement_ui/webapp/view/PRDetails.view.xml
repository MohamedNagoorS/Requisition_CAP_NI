<mvc:View
    controllerName="com.procurement.ui.controller.PRDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="Internal Document: Purchase Requisition" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox class="sapUiMediumMargin">
                 <Title text="Requisition #{requisitionHeaderID}" level="H2"/>
                 <ObjectStatus 
                    text="Status: {status}" 
                    state="{path: 'status', formatter: '.formatter.formatStatusState'}" 
                    icon="{path: 'status', formatter: '.formatter.formatStatusIcon'}"
                    class="sapUiSmallMarginBottom"
                 />
                 
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Header Details" columnsM="2" columnsL="2" columnsXL="2">
                    <f:content>
                        <core:Title text="General Info" />
                        <Label text="Requestor"/>
                        <Text text="{requestor}"/>
                        <Label text="Created At"/>
                        <Text text="{createdAt}"/>

                        <core:Title text="Financials" />
                        <Label text="Supplier"/>
                        <ComboBox items="{/Suppliers}" selectedKey="{supplier_ID}" placeholder="Select Supplier">
                            <core:Item key="{ID}" text="{name} ({city})"/>
                        </ComboBox>
                        
                        <Label text="Purchase Group"/>
                        <ComboBox items="{/PurchaseGroups}" selectedKey="{purchaseGroup_ID}" placeholder="Select Group">
                            <core:Item key="{ID}" text="{description} ({ID})"/>
                        </ComboBox>

                        <Label text="Company Code"/>
                        <Input value="{companyCode}" editable="false" />

                        <Label text="Total Value"/>
                        <ObjectNumber number="{
                            parts: [{path: 'totalValue'}, {path: 'view>/currencyCode'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: { showMeasure: false }
                        }" unit="{view>/currencyCode}" state="Success" />
                    </f:content>
                </f:SimpleForm>
            </VBox>

            <Table
                id="itemsTable"
                headerText="Items"
                items="{
                    path: 'items',
                     parameters : {
                        $expand : 'header'
                    }
                }"
                updateFinished=".onUpdateFinished"
                class="sapUiResponsiveMargin"
                width="auto">
                <columns>
                    <Column><Text text="Product Name"/></Column>
                    <Column width="5rem"><Text text="Qty"/></Column>
                    <Column width="8rem"><Text text="Price"/></Column>
                    <Column><Text text="Cost Center"/></Column>
                    <Column><Text text="Plant"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <!-- Material Selection Column -->
                            <VBox>
                                <CheckBox text="Manual?" selected="{ui>isManual}" select=".onCatalogModeToggle" />
                                
                                <!-- Catalog Mode: ComboBox -->
                                <ComboBox items="{/Materials}" selectedKey="{material_ID}" placeholder="Select Material"
                                    visible="{= !${ui>isManual} }"
                                    selectionChange=".onMaterialSelect">
                                    <core:Item key="{ID}" text="{description} ({ID})"/>
                                </ComboBox>
                                
                                <!-- Manual Mode: Free Text -->
                                <Input value="{materialDescription}" placeholder="Item Description" 
                                    visible="{ui>isManual}" />
                            </VBox>

                            <Input value="{quantity}" type="Number" />
                            
                            <!-- Price: Read-Only in Catalog, Editable in Manual -->
                            <Input value="{price}" type="Number" description="{view>/currencyCode}" fieldWidth="60%" 
                                editable="{ui>isManual}" />
                            
                            <ComboBox items="{/CostCenters}" selectedKey="{costCenter_ID}" placeholder="Select CC">
                                <core:Item key="{ID}" text="{description} ({ID})"/>
                            </ComboBox>
                            <ComboBox items="{/Plants}" selectedKey="{plant_ID}" placeholder="Select Plant">
                                <core:Item key="{ID}" text="{name} ({ID})"/>
                            </ComboBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Generate PO" type="Emphasized" press=".onGeneratePO" enabled="{view>/isGPOEnabled}" visible="{= ${status} !== 'Created' }"/>
                <Button text="Goods Issue" type="Accept" press=".onGoodsIssue" enabled="{view>/isGIEnabled}" visible="{= ${status} !== 'Created' }"/>
                <Button text="Send for Approval" type="Default" press=".onSendForApproval" visible="{= ${status} === 'Created' }"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
